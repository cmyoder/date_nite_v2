<div class="page-header">
  <h3><%= @restaurant.name %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">

      <dt>Contributor</dt>
      <dd>
        <% if @restaurant.contributor.present? %>
          <a href="/users/<%= @restaurant.contributor_id %>">
            <%= @restaurant.contributor.username %>
          </a>
        <% end %>
      </dd>

      <dd>
        <div>
          <div id="location_map" style="height: 480px;"></div>
        </div>
      </dd>


    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/restaurants" class="btn btn-default">
        <i class="fa fa-undo" aria-hidden="true"></i> Back
      </a>
      <% if current_user == @restaurant.contributor %>
      <a href="/restaurants/<%= @restaurant.id %>/edit" class="btn btn-default">
        <i class="fa fa-pencil" aria-hidden="true"></i> Edit
      </a>
      <a href="/delete_restaurant/<%= @restaurant.id %>" class="btn btn-default" rel="nofollow">
        <i class="fa fa-trash" aria-hidden="true"></i> Delete
      </a>
      <% end %>
    </div>
  </div>
</div>

<!-- A Restaurant has many date_nights -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Your Dates Here
      </li>

      <% @restaurant.date_nights.each do |date_night| %>
      <% if current_user == date_night.user || current_user == date_night.date %>
        <li class="list-group-item">
          <a href="/date_nights/<%= date_night.id %>">
            <%= date_night.day.to_formatted_s(:short) %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/date_nights/<%= date_night.id %>" class="btn btn-primary">
              <i class="fa fa-eye"></i>
            </a>
            <a href="/date_nights/<%= date_night.id %>/edit" class="btn btn-warning">
              <i class="fa fa-pencil"></i>
            </a>
            <a href="/delete_date_night/<%= date_night.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
      <% end %>
    </ul>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Create a Date Here
      </li>

      <li class="list-group-item">
        <form action="/create_date_night" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <input type="hidden" name="user_id" value="<%= current_user.id %>">

      <!-- Label and input for date_id -->
      <div class="form-group">
        <label for="date_id" class="control-label">
          Date
        </label>

        <%= select_tag(:date_id, options_from_collection_for_select(User.all, :id, :username), :class => "form-control") %>
      </div>

      <!-- Label and input for restaurant_id -->
      <input type="hidden" name="restaurant_id" value="<%= @restaurant.id %>">

      <!-- Label and input for activity_id -->
      <div class="form-group">
        <label for="activity_id" class="control-label">
          Activity
        </label>

        <%= select_tag(:activity_id, options_from_collection_for_select(Activity.all, :id, :name), :class => "form-control", :include_blank => true) %>
      </div>

      <!-- Label and input for day -->
      <div class="form-group">
        <label for="day" class="control-label">
          Day
        </label>

        <div class='input-group date' id='day'>
          <input type="hidden" id="day" name="day" placeholder="Day" class="form-control" value="<%= @date_night.day %>">

        </div>
      </div>

      <script type="text/javascript">
      $(function () {
        $('#day').datetimepicker({
          inline: true,
          sideBySide: true
        });
      });
      </script>

      <button class="btn btn-block btn-success">
        <i class="fa fa-calendar-plus-o" aria-hidden="true"></i> Create Date
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>


<script src="//maps.google.com/maps/api/js?v=3.24&key=AIzaSyCOTPWiuvyyo6sKoIBzKA4-1ol-vTOIOlM"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'location_map'}}, function(){
    markers = handler.addMarkers([
      {
        "lat": <%= @restaurant.location_latitude %>,
        "lng": <%= @restaurant.location_longitude %>,
        "infowindow": "<h5><%= @restaurant.created_at %></h5><small><%= @restaurant.location_formatted_address %></small>"
      }
    ]);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>
