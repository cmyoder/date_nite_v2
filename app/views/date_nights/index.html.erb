<div class="page-header">
  <h1>
    Date nights
    <a href="/date_nights/new" class="btn btn-lg btn-success">New Date night</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Date</th>
        <th>Restaurant</th>
        <th>Activity</th>
        <th>Day</th>
        <th>Actions</th>
      </tr>

      <% @date_nights.each do |date_night| %>
      <tr>
        <td>
          <% if date_night.user.present? %>
            <a href="/users/<%= date_night.user.id %>">
              <%= date_night.user.email %>
            </a>
          <% end %>
        </td>
        <td>
          <% if date_night.date.present? %>
            <a href="/users/<%= date_night.date.id %>">
              <%= date_night.date.email %>
            </a>
          <% end %>
        </td>
        <td>
          <% if date_night.restaurant.present? %>
            <a href="/restaurants/<%= date_night.restaurant.id %>">
              <%= date_night.restaurant.created_at %>
            </a>
          <% end %>
        </td>
        <td>
          <% if date_night.activity.present? %>
            <a href="/activities/<%= date_night.activity.id %>">
              <%= date_night.activity.name %>
            </a>
          <% end %>
        </td>
        <td><%= date_night.day %></td>
        <td>
          <a href="/date_nights/<%= date_night.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == date_night.user %>
            <a href="/date_nights/<%= date_night.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_date_night/<%= date_night.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @date_nights, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
