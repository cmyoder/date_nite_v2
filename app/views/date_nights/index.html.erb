<div class="page-header">
  <div class="page-header">

    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <a href="/date_nights/new" class="btn btn-default btn-block"><i class="fa fa-calendar-plus-o" aria-hidden="true"></i> New Date</a>
      </div>
    </div>
  </div>
    <h1>
      Date Nights
    </h1>

</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Invite From</th>
        <th>Date</th>
        <th>When</th>
        <th>Actions</th>
      </tr>

      <% @date_nights.each do |date_night| %>
      <% if date_night.user == current_user || date_night.date == current_user %>
      <tr>
        <td>
          <% if date_night.user.present? %>
          <a href="/users/<%= date_night.user.id %>">
            <%= date_night.user.username %>
          </a>
          <% end %>
        </td>
        <td>
          <% if date_night.date.present? %>
          <a href="/users/<%= date_night.date.id %>">
            <%= date_night.date.username %>
          </a>
          <% end %>
        </td>
        
        <td><%= date_night.day.to_formatted_s(:long) %></td>
        <td>
          <a href="/date_nights/<%= date_night.id %>" class="btn btn-default"><i class="fa fa-eye" aria-hidden="true"></i></a>

          <% if current_user == date_night.user || date_night.date %>
          <a href="/date_nights/<%= date_night.id %>/edit" class="btn btn-default"><i class="fa fa-pencil" aria-hidden="true"></i></a>
          <a href="/delete_date_night/<%= date_night.id %>" class="btn btn-default" rel="nofollow"><i class="fa fa-trash" aria-hidden="true"></i></a>
          <% end %>
        </td>
      </tr>
      <% end %>
      <% end %>
    </table>
    <%= paginate @date_nights, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
